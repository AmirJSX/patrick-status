{
  "compilerOptions": {
    "strict": true,
    "types": ["vite/client"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "/*": ["public/*"]
    }
  },
  "include": ["src", "vite.config.ts", "eslint.config.js"],
  "exclude": ["node_modules", "dist"]
}
